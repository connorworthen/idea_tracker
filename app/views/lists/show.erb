<form method="POST" action='/ideas/new'>

<h3>Create New Idea</h3>
<div class="form-group">
<label>Idea Name:</label> <br>
<input type="text" name="idea[name]">
</div>
<input type="hidden" name="idea[idea_id]">
<div class="form-group">
<label>Idea Content:</label> <br>
<input type="text" name="idea[content]">
</div>
<div class="form-group">
<input type="submit" value="Save Idea">
</div>
</form>