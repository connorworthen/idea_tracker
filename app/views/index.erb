<% if flash.has?(:message) %>
<p class="warning"> <%= flash[:message] %> </p>
<% end %>


<div class="form">
<h1>Welcome to Idea Journal</h1>
<form method="POST" action="/login">
  <div class="form-group">
    <label>Username:</label>
    <input type="text" name="username">
  </div>
