<h5>Please sign up</h5>

<form action="/users" method="post">
    <label for="username">Userame:</label>
    <input type="text" name="username" id="username">
    <p class="danger"><%= "Userame #{@errors[:username].first}" if(!!@errors && @errors[:username] && @errors[:username].first) %></p>
    <label for="email">Email:</label>
    <input type="text" name="email" id="email">
    <p class="danger"><%= "Email #{@errors[:email].first}" if(!!@errors && @errors[:email] && @errors[:email].first) %></p>
    <label for="password">Password:</label>
    <input type="password" name="password" id="password">
    <p class="danger"><%= "Password #{@errors[:password].first}" if(!!@errors && @errors[:password] && @errors[:password].first) %></p>
    <input type="submit" value="Create">
</form>
<a href="/login">Have an account already? Login in here</a>